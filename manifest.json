{
  "manifest_version": 3,
  "name": "HelloAsso Form Automator",
  "version": "0.1.0",
  "description": "Automate the creation of donation forms on HelloAsso",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://admin.helloasso.com/*",
    "https://admin.helloasso-sandbox.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://admin.helloasso.com/*",
        "https://admin.helloasso-sandbox.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
